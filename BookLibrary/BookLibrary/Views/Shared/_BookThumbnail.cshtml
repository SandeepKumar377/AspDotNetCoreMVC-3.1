@model BookModel

<div class="card mb-4 shadow-sm">
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/NoCoverImage.jpg" : Model.CoverImageUrl)" class="img-thumbnail" style="height:300px" />
        <div class="card-body">
            <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Title is not available" : Model.Title)</h5>
            <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
                </div>
                <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Author is not available" : Model.Author)</small>
            </div>
        </div>
    </div>