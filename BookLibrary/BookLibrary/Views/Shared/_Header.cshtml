@using Microsoft.Extensions.Configuration
@inject IConfiguration _configuration
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewBookAlertConfig> _newBookAlertconfiguration
@{ 
    var newBookAlertconfiguration = _newBookAlertconfiguration.Get("InternalBook");
    var thirdPartyBookAlertconfiguration = _newBookAlertconfiguration.Get("ThirdPartyBook");
}
<header>
    <nav class="navbar navbar-expand-lg navbar-toggler navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/logo.jpg" width="40" height="40" asp-append-version="true" />
                @_configuration["AppName"]
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                <ul class="navbar-nav">
                    <partial name="_LoginInfo" /> 
                   
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="home" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="home" asp-action="aboutus">ABOUT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="home" asp-action="contactus">CONTACT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="book" asp-action="getallbooks">ALL-BOOKS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="book" asp-action="AddNewBook">ADD-NEW-BOOK</a>
                    </li>
                </ul>

            </div>

        </div>

    </nav>

    @if (newBookAlertconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @newBookAlertconfiguration.BookName
        </div>
    }
    @if (thirdPartyBookAlertconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @thirdPartyBookAlertconfiguration.BookName
        </div>
    }

</header>